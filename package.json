{
	"name": "template-node-project",
	"description": "Template for projects with Node.js",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "nodemon src/server.js",
		"start": "node src/server.js",
		"lint": "eslint --fix src/**/*.js",
		"format": "prettier --write ."
	},
	"author": {
		"name": "Daniel Projects",
		"email": "danielclark.projects@gmail.com"
	},
	"license": "ISC",
	"devDependencies": {
		"eslint": "8.33.0",
		"eslint-config-prettier": "8.6.0",
		"eslint-config-standard": "17.0.0",
		"eslint-plugin-import": "2.27.5",
		"eslint-plugin-n": "15.6.1",
		"eslint-plugin-promise": "6.1.1",
		"nodemon": "2.0.20",
		"prettier": "2.8.3"
	},
	"dependencies": {
		"@sinclair/typebox": "0.25.24",
		"ajv": "8.12.0",
		"ajv-errors": "3.0.0",
		"ajv-formats": "2.1.1",
		"cors": "2.8.5",
		"dotenv": "16.0.3",
		"express": "4.18.2",
		"mongoose": "7.0.1"
	},
	"imports": {
		"#Config/*": "./src/config/*",
		"#Lib/*": "./src/lib/*",
		"#Routes/*": "./src/routes/*",
		"#Dto/*": "./src/dto/*",
		"#Controllers/*": "./src/controllers/*",
		"#Services/*": "./src/services/*",
		"#Schemas/*": "./src/schemas/*",
		"#Models/*": "./src/models/*"
	}
}
